    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Blah blah -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>-->
    </style>

    <style name="Theme.NoTitleBar.Transparent" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.NoTitleBar.Fullscreen" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/f_18</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>

    </style>

    <style name="ActivityInOutAnimation" parent="AppTheme">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close</item>
    </style>

    <style name="TextFonts">
        <item name="fontPath">fonts/SonyReader_Ming.ttf</item>
    </style>

    <style name="item_me">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/mp_45</item>
        <item name="android:paddingStart">@dimen/mp_20</item>
        <item name="android:paddingEnd">@dimen/dp_0</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="item_me_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/mp_10</item>
        <item name="android:textColor">@color/item_me_text</item>
        <item name="android:textSize">@dimen/f_18</item>

    </style>


</resources>
