<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/item_title"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:text="@string/mine"
        android:textColor="@color/theme_style"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_publish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:background="@color/item_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="@dimen/mp_10"
            android:text="@string/my_start_opus"
            android:textColor="@color/item_text_color_dark"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:background="@color/item_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="@dimen/mp_10"
            android:text="@string/my_join"
            android:textColor="@color/item_text_color_dark"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:background="@color/item_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="@dimen/mp_10"
            android:text="@string/my_opus"
            android:textColor="@color/item_text_color_dark"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_draft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:background="@color/item_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="@dimen/mp_10"
            android:text="@string/my_draft"
            android:textColor="@color/item_text_color_dark"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_wallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:background="@color/item_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/mp_20"
            android:paddingEnd="@dimen/mp_10"
            android:text="@string/my_wallet"
            android:textColor="@color/item_text_color_dark"
            android:textSize="@dimen/f_18" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/item_title"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:text="@string/read_setting"
        android:textColor="@color/theme_style"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_night"
        android:layout_width="match_parent"
        android:background="@color/item_color"
        android:layout_height="@dimen/mp_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/night_mode"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="适用于夜间长期阅读" />-->
        </LinearLayout>
        <ToggleButton
            android:id="@+id/tb_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:textOff=""
            android:textOn=""
            android:layout_marginEnd="-25dp"
            style="@style/ToggleButton"
            android:checked="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/item_title"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:text="@string/system_setting"
        android:textColor="@color/theme_style"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_catch"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:background="@color/item_color"
        android:layout_height="@dimen/mp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clean_cache"
            android:layout_centerVertical="true"
            android:textColor="@color/item_text_color_dark"
            android:textSize="@dimen/f_18" />
      <!--  <ImageView
            android:id="@+id/iv_catch_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>-->
        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/item_text_color_dark"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/f_16" />

    </RelativeLayout>
    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:background="@color/item_color"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_update"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/item_text_color"
                    android:text="@string/current_version_code" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/item_text_color"/>
            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:id="@+id/iv_update_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>

    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:background="@color/item_color"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_about_us"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/item_text_color"
                android:text="@string/about_us_describe" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>

    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_advice"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:background="@color/item_color"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_advice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advice"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/item_text_color"
                android:text="@string/advice_describe" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>

    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_protocol"
        android:layout_width="match_parent"
        android:background="@color/item_color"
        android:paddingStart="20dp"
        android:paddingEnd="@dimen/mp_10"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_protocol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protocol"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/item_text_color"
                android:text="@string/protocol_describe" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>
    <include layout="@layout/base_line"/>
    <View
        android:id="@+id/me_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_55"/>
</LinearLayout>
