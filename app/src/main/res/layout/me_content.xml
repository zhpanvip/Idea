<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gray_ea"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="我的"
        android:textColor="@color/green"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_publish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="我发起的作品"
            android:textColor="@color/gray_33"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_join"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="我参与的作品"
            android:textColor="@color/gray_33"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="我原创的作品"
            android:textColor="@color/gray_33"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_draft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="我的草稿"
            android:textColor="@color/gray_33"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <RelativeLayout
        android:id="@+id/rl_wallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/mp_20"
            android:text="我的钱包"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/f_18" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_15"
            android:src="@drawable/array_right"/>

    </RelativeLayout>

    <include layout="@layout/base_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gray_ea"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="阅读设置"
        android:textColor="@color/green"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_night"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间模式"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/f_18" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="适用于夜间长期阅读" />-->
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mp_15"
            android:src="@drawable/array_right"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gray_ea"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="系统设置"
        android:textColor="@color/green"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_catch"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="@dimen/mp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/f_18" />
      <!--  <ImageView
            android:id="@+id/iv_catch_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35M"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_33"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_alignParentRight="true"
            android:textSize="20sp" />

    </RelativeLayout>
    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="当前版本号：V1.0.2" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_update_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>

    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_about_us"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="《创意说》渴望每个志同道合的人加入我们" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>

    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_advice"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_advice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="产品正在成长期，很渴望每一位用户的建议" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>

    <include layout="@layout/base_line" />
    <RelativeLayout
        android:id="@+id/rl_protocol"
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:layout_height="@dimen/mp_50">
        <LinearLayout
            android:id="@+id/ll_protocol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="协议相关"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/f_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="用户协议，隐私声明，免责声明" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/mp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/array_right"/>
    </RelativeLayout>
    <include layout="@layout/base_line"/>
    <View
        android:id="@+id/me_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_55"/>
</LinearLayout>
