<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_author"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/login_photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="一首二进制的歌"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/sp_14" />

            <com.cypoem.idea.view.SexView
                android:id="@+id/sex_view"
                android:layout_width="@dimen/mp_15"
                android:layout_height="@dimen/mp_15"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/mp_5" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mp_5"
            android:text="@string/add_a_sign"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/f_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn_not_fill"
                android:gravity="center"
                android:text="@string/focus"
                android:textColor="@color/text_theme" />

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_70"
                android:background="@drawable/bg_btn_not_fill"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="私信"
                android:textColor="@color/text_theme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_focus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/focus"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_15" />

                <TextView

                    android:id="@+id/tv_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_fans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fans"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/collect"
                    android:textColor="@color/item_text_color_dark"
                    android:textSize="@dimen/f_16" />

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/item_text_color_dark"
                    android:textSize="@dimen/f_16" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/value"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/base_line" />

        <!--<ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/mp_30"
            android:layout_height="@dimen/mp_30"
            android:layout_alignParentEnd="true"
            android:src="@drawable/t3_edit" />

        <Button
            android:id="@+id/tv_follow"
            android:layout_width="@dimen/mp_60"
            android:layout_height="@dimen/mp_30"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_follow"
            android:text="@string/focus"
            android:textColor="@color/btn_focus"
            android:textSize="@dimen/f_15"
            android:visibility="gone" />-->
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mp_15"
        android:layout_marginStart="@dimen/mp_15"
        android:text="@string/author_resume"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/f_16" />

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mp_10"
        android:layout_marginEnd="@dimen/mp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/mp_15"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/f_13" />

    <include layout="@layout/base_line" />


</LinearLayout>
