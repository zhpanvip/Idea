<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <com.cypoem.idea.view.SexView
            android:id="@+id/sex_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_30"
            android:layout_marginTop="@dimen/mp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/mp_15"
                android:layout_height="@dimen/mp_15"
                android:layout_marginStart="@dimen/mp_20"
                android:src="@drawable/male" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progress="50"
                android:progressDrawable="@drawable/bg_progress"
                android:thumb="@drawable/shape_circle" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/mp_15"
                android:layout_height="@dimen/mp_15"
                android:layout_marginEnd="@dimen/mp_20"
                android:src="@drawable/female" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/mp_15"
            android:background="@drawable/bg_btn_confirm"
            android:textColor="#3bbaff"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>
