<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_author"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_40"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:fillViewport="false"
        app:layout_scrollFlags="scroll"
        app:tabIndicatorColor="@color/text_theme"
        android:backgroundTint="@color/background"
        app:tabIndicatorHeight="3.0dp"
        app:tabSelectedTextColor="@color/text_theme"
        app:tabTextColor="@color/gray_66">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我发起的" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我参与的" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我原创的" />

    </android.support.design.widget.TabLayout>
    <include layout="@layout/base_line"/>
    <com.cypoem.idea.view.ViewpagerForScrollView
        android:id="@+id/vp_author"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
