<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/mp_15"
    android:paddingEnd="@dimen/mp_15"
    android:background="@color/item_color"
    android:layout_height="@dimen/mp_80">
    <ImageView
        android:id="@+id/iv_head_pic"
        android:layout_width="@dimen/mp_60"
        android:layout_height="@dimen/mp_60"
        android:src="@drawable/head_pic"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/itemTextColorDark"
        android:text="韩三少"
        android:layout_marginTop="@dimen/mp_5"
        android:layout_toEndOf="@id/iv_head_pic"
        android:layout_alignTop="@id/iv_head_pic"
        android:layout_marginStart="@dimen/mp_10"
        android:textSize="@dimen/f_16"/>
    <com.cypoem.idea.view.SexView
        android:id="@+id/iv_male"
        android:layout_width="@dimen/mp_15"
        android:layout_height="@dimen/mp_15"
        android:layout_toEndOf="@id/tv_name"
        android:layout_marginTop="@dimen/mp_10"
        android:layout_marginStart="@dimen/mp_3"/>
    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toEndOf="@id/iv_head_pic"
        android:layout_marginStart="@dimen/mp_10"
        android:layout_marginTop="@dimen/mp_5"
        android:textColor="@color/gray_99"
        android:text="签名：你爸是我爸，你妈是我妈"/>


        <TextView
            android:id="@+id/tv_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/mp_5"
            android:layout_alignParentEnd="true"
            android:textColor="@color/gray_99"
            android:text="发起23/参与34/原创5"/>
</RelativeLayout>
