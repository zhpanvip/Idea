<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.cypoem.idea.activity.AddLabelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#请选择标签#"
        android:textSize="18sp"
        android:paddingStart="@dimen/mp_15"
        android:layout_marginTop="@dimen/mp_15"
        android:textColor="@color/gray_99"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:max_select="3"/>
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_45"
        android:layout_marginTop="@dimen/mp_30"
        android:background="@drawable/bg_btn_login"
        android:layout_marginStart="@dimen/mp_15"
        android:layout_marginEnd="@dimen/mp_15"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/f_18" />
</LinearLayout>
