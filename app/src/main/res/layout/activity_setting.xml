<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F8FB"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/item_color"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp">

            <ImageView
                android:id="@+id/iv_phone_array"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:src="@drawable/t5_safe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="安全相关"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_update_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_50"
            android:background="@color/item_color"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/update_password"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <ImageView
                android:id="@+id/iv_password_array"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:src="@drawable/array_right" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:layout_toLeftOf="@id/iv_password_array"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_16" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_night"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/item_color">

            <ImageView
                android:id="@+id/iv_night_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@drawable/t5_moon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_night_mode"
                android:text="@string/night_mode"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <Switch
                android:id="@+id/tb_night_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:background="#00000000"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_catch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_50"
            android:background="@color/item_color"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp">

            <ImageView
                android:id="@+id/iv_clear_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:src="@drawable/t5_dustbin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_clear_cache"
                android:text="@string/clean_cache"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_16" />

        </RelativeLayout>

        <include layout="@layout/base_line" />

        <RelativeLayout
            android:id="@+id/rl_about_us"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_50"
            android:background="@color/item_color"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp">

            <ImageView
                android:id="@+id/iv_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:src="@drawable/t5_aboutus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_about_us"
                android:text="@string/about_us"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />


        </RelativeLayout>

        <include layout="@layout/base_line" />

        <RelativeLayout
            android:id="@+id/rl_advice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_50"
            android:background="@color/item_color"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp">

            <ImageView
                android:id="@+id/iv_advice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:src="@drawable/t5_respond" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_advice"
                android:text="@string/advice"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />


        </RelativeLayout>

        <include layout="@layout/base_line" />


        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_50"
            android:background="@color/item_color"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp">

            <ImageView
                android:id="@+id/iv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:src="@drawable/t5_update" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_update"
                android:text="@string/version_update"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="V 2.0.0"
                android:textSize="@dimen/dp_14" />


        </RelativeLayout>


        <include layout="@layout/base_line" />


        <RelativeLayout
            android:id="@+id/rl_protocol"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_50"
            android:background="@color/item_color"
            android:paddingEnd="@dimen/mp_10"
            android:paddingStart="20dp">

            <ImageView
                android:id="@+id/iv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mp_15"
                android:src="@drawable/t5_agreement" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_protocol"
                android:text="@string/protocol"
                android:textColor="@color/item_text_color_dark"
                android:textSize="@dimen/f_18" />


        </RelativeLayout>

        <include layout="@layout/base_line" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:layout_marginTop="@dimen/mp_35"
            android:background="@color/text_theme"
            android:text="退出登录"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="@color/white" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
