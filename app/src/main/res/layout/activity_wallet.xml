<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mp_50"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/wallet" />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.8元"
        android:textColor="@color/green"
        android:layout_below="@id/iv_wallet"
        android:textSize="@dimen/f_18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mp_10"/>

    <TextView
        android:id="@+id/tv_withdraw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_below="@id/tv_money"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:text="提现"
        android:gravity="center"
        android:background="@color/green"/>

    <TextView
        android:id="@+id/tv_charge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="@color/green"
        android:text="充值"
        android:gravity="center"
        android:background="@color/gray_dd"
        android:layout_below="@+id/tv_withdraw"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:textColor="@color/green"
        android:textSize="@dimen/f_16"
        android:layout_marginBottom="@dimen/mp_10"
        android:text="常见问题"/>
</RelativeLayout>
