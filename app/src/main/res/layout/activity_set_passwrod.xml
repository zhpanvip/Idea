<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingEnd="@dimen/mp_15"
    android:paddingStart="@dimen/mp_15">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_180"
        android:gravity="center"
        android:text="創意說"
        android:textColor="@color/item_text_color"
        android:textSize="@dimen/f_32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_35"
        android:layout_marginEnd="@dimen/mp_30"
        android:layout_marginStart="@dimen/mp_30"
        android:layout_marginTop="@dimen/mp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:background="@null"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingEnd="@dimen/mp_15"
            android:paddingStart="@dimen/mp_15"
            android:textColor="@color/item_text_color_dark"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/edit_text_color_cursor" />
    </LinearLayout>

    <include layout="@layout/layout_login_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_35"
        android:layout_marginEnd="@dimen/mp_30"
        android:layout_marginStart="@dimen/mp_30"
        android:layout_marginTop="@dimen/mp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_verify" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:background="@null"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:paddingEnd="@dimen/mp_15"
            android:paddingStart="@dimen/mp_15"
            android:textColor="@color/item_text_color_dark"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/edit_text_color_cursor" />
    </LinearLayout>

    <include layout="@layout/layout_login_line" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_40"
        android:layout_marginEnd="@dimen/mp_25"
        android:layout_marginStart="@dimen/mp_25"
        android:layout_marginTop="@dimen/mp_70"
        android:background="@drawable/bg_btn_login"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/f_18" />
</LinearLayout>
