<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/mp_15"
    android:paddingEnd="@dimen/mp_15">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_150"
        android:background="@drawable/background"
        android:scaleType="fitXY" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_45"
        android:layout_marginTop="@dimen/mp_20"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/edit_text_color_cursor"
        android:paddingEnd="@dimen/mp_15"
        android:paddingStart="@dimen/mp_15" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_45"
        android:background="@drawable/bg_edit_text"
        android:layout_marginTop="@dimen/mp_20"
        android:inputType="textPassword"
        android:paddingEnd="@dimen/mp_15"
        android:textCursorDrawable="@drawable/edit_text_color_cursor"
        android:paddingStart="@dimen/mp_15"
        android:hint="@string/confirm_password"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/f_18"
        android:background="@drawable/bg_btn_login"
        android:layout_marginTop="@dimen/mp_40"/>
</LinearLayout>
