<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cypoem.idea.view.MScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhpan.viewpager.view.CircleViewPager
                    android:id="@+id/cvp_banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <!--Banner下方的GridView-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/gv_item"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170" />

                <include
                    android:id="@+id/line_recommend"
                    layout="@layout/base_line10" />

                <!--热门推荐-->
                <include
                    android:id="@+id/rl_recommend"
                    layout="@layout/item_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <include layout="@layout/base_line10" />

                <!--热门作者-->
                <include
                    android:id="@+id/rl_hot_author"
                    layout="@layout/item_title" />

                <include layout="@layout/base_line" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_follow_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_220" />

                <include layout="@layout/base_line10" />

                <!--最新故事-->
                <include
                    android:id="@+id/ll_title_newest"
                    layout="@layout/item_title" />
                <include layout="@layout/base_line" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_newest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <include layout="@layout/base_line10" />
            </LinearLayout>
        </com.cypoem.idea.view.MScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <!--搜索状态栏-->
    <include
        android:id="@+id/ll_search_bar"
        layout="@layout/layout_find_search_bar" />

    <!--状态栏下划线-->
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@id/ll_search_bar"
        android:background="#00DDDDDD" />

</RelativeLayout>
