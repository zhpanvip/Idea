<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_opus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.cypoem.idea.activity.OpusActivity">


    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_color"
        android:orientation="horizontal"
        android:paddingTop="@dimen/mp_5">

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_text_color"
                android:text="@string/_12k" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/praise" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_text_color"
                android:text="@string/_12k" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_text_color"
                android:text="@string/_12k" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/override" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_text_color"
                android:text="@string/_12k" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/write" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_text_color"
                android:text="@string/_12k" />
        </LinearLayout>
    </LinearLayout>

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/list_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_duration_to_close_either="500"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_pull_to_fresh="false"
        android:layout_above="@id/ll_tab"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        app:ptr_resistance="1.7">

    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/rv_opus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</RelativeLayout>
