<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_opus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_style_white"
    tools:context="com.cypoem.idea.activity.OpusActivity">


    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/item_color"
        android:orientation="horizontal"
        android:paddingTop="@dimen/mp_5">

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/praise" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/override" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/mp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/mp_25"
                android:layout_height="@dimen/mp_25"
                android:src="@drawable/write" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12" />
        </LinearLayout>
    </LinearLayout>

    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/rv_opus"
        android:layout_width="match_parent"
        android:layout_above="@id/ll_tab"
        android:layout_height="match_parent"/>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_tab"
        android:orientation="vertical">

        <include layout="@layout/layout_article" />
    </LinearLayout>-->


</RelativeLayout>
