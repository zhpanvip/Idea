<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_180"
            android:background="@drawable/bg_everyday"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_pic"
                android:layout_width="@dimen/mp_70"
                android:layout_height="@dimen/mp_70"
                android:scaleType="fitXY"
                android:src="@drawable/add_pic"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mp_10"
                android:text="请添加一个图片"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/f_16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mp_10"
                android:text="720*1080"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/f_16"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:layout_marginTop="@dimen/mp_20">

            <include layout="@layout/base_line"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:hint="请输入作品名称"
                android:background="@null"
                android:textSize="@dimen/f_18"/>
        </RelativeLayout>

        <include layout="@layout/base_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="作品标签"
                android:textSize="@dimen/f_18"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/array_right"/>
        </RelativeLayout>

        <include layout="@layout/base_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="作品简介"
                android:textSize="@dimen/f_18"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/array_right"/>
        </RelativeLayout>

        <include layout="@layout/base_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="是否允许被重写"
                android:textSize="@dimen/f_18"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/array_right"/>
        </RelativeLayout>

        <include layout="@layout/base_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="是否允许被续写"
                android:textSize="@dimen/f_18"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/array_right"/>
        </RelativeLayout>

        <include layout="@layout/base_line"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_45"
            android:background="@drawable/bg_btn_login"
            android:textColor="@color/white"
            android:textSize="@dimen/f_18"
            android:layout_marginTop="@dimen/mp_15"
            android:text="开始"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mp_10"

            android:text="注：支持原创 杜绝抄袭，杜绝非法转载"/>
    </LinearLayout>
</ScrollView>
