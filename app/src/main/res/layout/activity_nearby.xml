<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.cypoem.idea.activity.NearbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--附近的人-->
        <include
            android:id="@+id/ll_nearby_author"
            layout="@layout/layout_follow_user" />

        <include layout="@layout/base_line10" />

        <!--附近故事-->
        <include layout="@layout/item_title" />

        <include layout="@layout/base_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_nearby_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/base_line10" />

        <!--附近圈子-->
        <include layout="@layout/item_title" />

        <include layout="@layout/base_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_nearby_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/base_line10" />
        <!--附近的读书会-->
        <include layout="@layout/item_title" />

        <include layout="@layout/base_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_nearby_read_meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>