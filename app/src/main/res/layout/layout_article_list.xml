<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_read"
    android:layout_marginBottom="@dimen/mp_10"
    android:layout_marginEnd="@dimen/mp_10"
    android:layout_marginStart="@dimen/mp_10"
    android:layout_marginTop="@dimen/mp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_card_bg"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_0"
            android:layout_margin="@dimen/mp_10"
            android:layout_weight="1"
            android:transitionName="sharedView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="如若可以，浅笑安然"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/f_16" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="时间：2017-05-23"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/f_14" />

            <TextView
                android:id="@+id/tv_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/f_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/mp_10"
                android:paddingTop="@dimen/mp_10"
                android:text="查看所有章节>>"
                android:textColor="@color/text_theme"
                android:textSize="@dimen/f_15"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mp_1"
                android:layout_marginEnd="@dimen/mp_10"
                android:layout_marginStart="@dimen/mp_10"
                android:layout_marginTop="@dimen/mp_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/rl_author"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mp_60"
                android:layout_marginEnd="@dimen/mp_10"
                android:layout_marginStart="@dimen/mp_10"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_head_pic"
                    android:layout_width="@dimen/mp_45"
                    android:layout_height="@dimen/mp_45"
                    android:layout_centerVertical="true"
                    android:src="@drawable/head_pic" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/mp_10"
                    android:layout_marginTop="@dimen/mp_5"
                    android:layout_toEndOf="@id/iv_head_pic"
                    android:text="韩三少的剑"
                    android:textColor="@color/item_text_color_dark"
                    android:textSize="@dimen/f_16" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginStart="@dimen/mp_10"
                    android:layout_marginTop="@dimen/mp_5"
                    android:layout_toEndOf="@id/iv_head_pic"
                    android:text="2017-05-24 创作"
                    android:textColor="@color/item_text_color"
                    android:textSize="@dimen/f_14" />

                <Button
                    android:id="@+id/tv_focus"
                    android:layout_width="@dimen/mp_65"
                    android:layout_height="@dimen/mp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_btn_login"
                    android:gravity="center"
                    android:text="+关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/f_14" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

