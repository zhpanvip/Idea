<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <include layout="@layout/base_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mp_130"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mp_60"
                    android:layout_marginTop="@dimen/mp_10">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="@dimen/mp_60"
                        android:layout_height="@dimen/mp_60"
                        android:layout_marginEnd="@dimen/mp_10"
                        android:layout_marginStart="@dimen/mp_20"
                        android:background="@drawable/login_photo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_head"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/mp_5"
                                android:text="一首二进制的歌"
                                android:textColor="@color/item_me_text"
                                android:textSize="@dimen/f_15" />

                            <com.cypoem.idea.view.SexView
                                android:layout_width="@dimen/mp_15"
                                android:layout_height="@dimen/mp_15"
                                android:layout_alignTop="@id/tv_username"
                                android:layout_toEndOf="@id/tv_username" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mp_5"
                            android:layout_toEndOf="@id/iv_head"
                            android:text="我不再让你孤单"
                            android:textSize="@dimen/f_12" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/mp_20"
                        android:background="@drawable/array_right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_arrow"
                        android:text="我的主页"
                        android:textColor="@color/text_theme"
                        android:textSize="@dimen/f_18" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="@dimen/mp_0"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="@color/item_me_text"
                            android:textSize="@dimen/f_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mp_7"
                            android:text="45"
                            android:textSize="@dimen/f_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/mp_0"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="@color/item_me_text"
                            android:textSize="@dimen/f_15" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mp_7"
                            android:text="231"
                            android:textSize="@dimen/f_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/mp_0"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="欣赏只"
                            android:textColor="@color/item_me_text"
                            android:textSize="@dimen/f_15" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/mp_7"
                            android:text="523"
                            android:textSize="@dimen/f_12" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/base_line10"/>

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_create_circle"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_mycreative" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_create_circle"
                    android:text="@string/circle_of_me" />

                <ImageView
                    android:id="@+id/iv_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow1"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_follow_circle"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_mywatch" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_alignTop="@+id/iv_follow_circle"
                    android:layout_toEndOf="@+id/iv_follow_circle"
                    android:text="我关注的圈子" />

                <ImageView
                    android:id="@+id/iv_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow2"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line10"/>


            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_create_story"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_mystory" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_create_story"
                    android:text="我创建的故事" />

                <ImageView
                    android:id="@+id/iv_arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow3"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_collect_story"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_mysave" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_collect_story"
                    android:text="我收藏的故事" />

                <ImageView
                    android:id="@+id/iv_arrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow4"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_join_story"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_myjoin" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_join_story"
                    android:text="我参与的故事" />

                <ImageView
                    android:id="@+id/iv_arrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow5"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line10"/>


            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_mypurse" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_wallet"
                    android:text="我的钱包" />

                <ImageView
                    android:id="@+id/iv_arrow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow6"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_draft"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_mypaper" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_draft"
                    android:text="我的草稿" />

                <ImageView
                    android:id="@+id/iv_arrow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow7"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_advice"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_advice" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_advice"
                    android:text="意见反馈" />

                <ImageView
                    android:id="@+id/iv_arrow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow8"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line10"/>


            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_question"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_mycreative" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_question"
                    android:text="疑问解答" />

                <ImageView
                    android:id="@+id/iv_arrow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow9"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_share"/>
                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_share"
                    android:text="分享App" />

                <ImageView
                    android:id="@+id/iv_arrow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow10"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

            <RelativeLayout style="@style/item_me">

                <ImageView
                    android:id="@+id/iv_about_us"
                    android:layout_width="@dimen/mp_24"
                    android:layout_height="@dimen/mp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/t5_about" />

                <TextView
                    style="@style/item_me_text"
                    android:layout_toEndOf="@id/iv_about_us"
                    android:text="关于创意说" />

                <ImageView
                    android:id="@+id/iv_arrow11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/array_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/iv_arrow11"
                    android:text="12"
                    android:textColor="@color/item_me_text_right"
                    android:textSize="@dimen/f_18" />

            </RelativeLayout>

            <include layout="@layout/base_line" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
