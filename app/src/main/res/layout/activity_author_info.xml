<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/mp_15"
    android:paddingTop="@dimen/mp_15"
    android:paddingEnd="@dimen/mp_15"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context="com.cypoem.idea.activity.AuthorInfoActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_author"
            android:layout_width="@dimen/mp_140"
            android:layout_height="@dimen/mp_180"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/mp_15"
            android:src="@drawable/head_pic"/>
        <TextView
            android:id="@+id/tv_pen_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_marginTop="@dimen/mp_10"
            android:textSize="@dimen/f_18"
            android:text="笔名："
            android:layout_toEndOf="@id/iv_author"/>
        <TextView
            android:id="@+id/tv_pen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="韩小贱"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/f_15"
            android:layout_marginTop="@dimen/mp_15"
            android:layout_toEndOf="@id/tv_pen_name_text"/>
        <ImageView
            android:layout_width="@dimen/mp_15"
            android:layout_height="@dimen/mp_15"
            android:layout_marginTop="@dimen/mp_10"
            android:layout_toEndOf="@id/tv_pen_name"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/tv_sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/f_18"
            android:layout_below="@id/tv_pen_name_text"
            android:text="签名："
            android:layout_marginTop="@dimen/mp_8"
            android:layout_toEndOf="@id/iv_author"/>
        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你爸是我爸，你妈是我妈。"
            android:layout_below="@id/tv_pen_name_text"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/f_16"
            android:layout_marginTop="@dimen/mp_10"
            android:layout_toEndOf="@id/tv_pen_name_text"/>

        <TextView
            android:id="@+id/tv_birthday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_marginTop="@dimen/mp_5"
            android:textSize="@dimen/f_18"
            android:text="生日："
            android:layout_below="@id/tv_sign"
            android:layout_toEndOf="@id/iv_author"/>
        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1995/05/14"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/f_16"
            android:layout_below="@id/tv_sign"
            android:layout_marginTop="@dimen/mp_7"
            android:layout_toEndOf="@id/tv_pen_name_text"/>
        <TextView
            android:id="@+id/tv_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_marginTop="@dimen/mp_8"
            android:textSize="@dimen/f_18"
            android:text="地址："
            android:layout_below="@id/tv_birthday"
            android:layout_toEndOf="@id/iv_author"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联合国"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/f_16"
            android:layout_below="@id/tv_birthday"
            android:layout_marginTop="@dimen/mp_10"
            android:layout_toEndOf="@id/tv_pen_name_text"/>

        <ImageView
            android:layout_width="@dimen/mp_30"
            android:layout_height="@dimen/mp_30"
            android:src="@drawable/edit_info"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者简介："
        android:layout_marginTop="@dimen/mp_10"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/f_18"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/f_16"
        android:layout_marginBottom="@dimen/mp_10"
        android:text="韩博，笔名韩三少。毕业于河南大学挖掘机系，因不满于老师的挖掘技能，后转到太极学院，并考上太极拳四段位。毕业后，不务正业，吃喝嫖赌，无所事事..."/>
    <include layout="@layout/base_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_45"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/f_16"
            android:gravity="center"
            android:text="关注 12k | "/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/f_16"
            android:gravity="center"
            android:text="收藏 12 |"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/f_16"
            android:gravity="center"
            android:text="欣赏值 12k | "/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/f_16"
            android:gravity="center"
            android:text=" 粉丝 15k"/>
    </LinearLayout>
    <include layout="@layout/base_line"/>


</LinearLayout>
