

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- 连框颜色值 -->
<item>
    <shape>
        <solid android:color="@color/green"/>
        <corners
            android:topLeftRadius="3dp"
            android:bottomLeftRadius="3dp"/>
    </shape>
</item>
<!-- 主体背景颜色值 -->
<item
    android:top="1dp"
    android:bottom="1dp"
    android:left="1dp">
    <shape>
        <solid android:color="@color/green"/>
        <corners
            android:topLeftRadius="3dp"
            android:bottomLeftRadius="3dp"/>
    </shape>
</item>
</layer-list>